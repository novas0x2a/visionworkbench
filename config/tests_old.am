########################################################################
# tests (using cxxtest)
########################################################################

SUFFIXES += .cxx

CXXTEST_DIR =   $(top_srcdir)/thirdparty/cxxtest
CXXTEST_GEN =   $(CXXTEST_DIR)/cxxtestgen.pl
CXXTEST_ARGS =  --error-printer

TEST_CPPFLAGS = -I$(CXXTEST_DIR) -DTEST_SRCDIR="\"$(top_srcdir)/$(subdir)\""

.oldtest.cxx:
	$(AM_V_GEN)$(CXXTEST_GEN) $(CXXTEST_ARGS) -o $@ $<
